{
  "fpsLimit": 30,
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "onClick": {
        "enable": false,
        "mode": "push"
      },
      "onHover": {
        "enable": true,
        "mode": "bubble"
      },
      "resize": true
    },
    "modes": {
      "bubble": {
        "distance": 150,
        "duration": 2,
        "opacity": 0.5,
        "size": 15
      },
      "push": {
        "quantity": 4
      },
      "repulse": {
        "distance": 200,
        "duration": 0.4
      }
    }
  },
  "particles": {
    "color": {
      "value": "#ffffff"
    },
    "links": {
      "color": "#ffffff",
      "distance": 150,
      "enable": true,
      "opacity": 0.2,
      "width": 1
    },
    "collisions": {
      "enable": true
    },
    "move": {
      "direction": "none",
      "enable": true,
      "outMode": "bounce",
      "random": false,
      "speed": 0.2,
      "straight": false
    },
    "number": {
      "density": {
        "enable": true,
        "value_area": 800
      },
      "value": 70
    },
    "opacity": {
      "value": 0.4
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "random": true,
      "value": 5
    }
  },
  "detectRetina": true
}
